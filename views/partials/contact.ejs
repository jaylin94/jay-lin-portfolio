<div id="contactTop" class="justify-content-center text-center pb-5 text-light bg-dark">
  <h1 class="display-3">Contact Me!</h1>
  <div class="container border border-light col-11 col-md-6 shadow justify-content-start align-items-center">
    <form method="" enctype="text/plain">
      <div class="row mx-2 my-2">
        <label class="col-4 mr-1 mt-2 required" for="name">Name: </label>
        <input class="col-5" type="text" id="name" name="name" />
      </div>
      <div class="row mx-2 my-2 ">
        <label class="col-4 mr-1 mt-2 required" for="email">Email: </label>
        <input class="col-5" type="email" id="email" name="email" />
      </div>
      <div class="row mx-2 my-2">
        <label class="col-4 mr-1 mt-2 required" for="message">Message: </label>
        <textarea class="col-5" rows="6" text="wrap" type="text" id="message" name="message"></textarea>
      </div>
      <div class="row justify-content-center pb-3 mt-3">
        <input id="mailBtn" class="btn btn-lg btn-secondary" type="submit" value="Send" />
      </div>
    </form>
  </div>
</div>